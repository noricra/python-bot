# Configuration TechBot Marketplace
# Copiez ce fichier vers .env et remplissez vos valeurs

# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here
ADMIN_USER_ID=your_telegram_user_id_here

# NOWPayments Configuration (optionnel pour les tests)
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_IPN_SECRET=your_nowpayments_ipn_secret

# Email Configuration (optionnel pour les tests)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Database and Storage
DATABASE_PATH=marketplace_database.db
LOG_DIR=logs
UPLOADS_DIR=uploads
WALLETS_DIR=wallets

# Business Configuration
PLATFORM_COMMISSION_RATE=0.05
PARTNER_COMMISSION_RATE=0.10
MAX_FILE_SIZE_MB=100
MIN_PAYOUT_AMOUNT_SOL=0.1